{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Корзина</h1>
        <table class="table table-bordered">
        <tr>
            <th>Товар</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Стоимость</th>
        </tr>
    {# @var item \App\Entity\OrderItem #}
    {% for item in order.items %}
        <tr>
            <td>{{ item.product.name }}</td>
            <td>{{ item.product.price }}</td>
            <td>{{ item.count }}</td>
            <td>{{ item.amount }}</td>
        </tr>
        <tr>
            <td colspan="2">
                Всего
            </td>
            <td>{{ order.count }}</td>
            <td>{{ order.amount }}</td>
        </tr>
        </table>
    {% endfor %}
    </div>

{% endblock body%}