{% extends 'base.html.twig' %}
{% block title  %}
    Главная
{% endblock title %}
{% block body %}
    <div class="row">
        {% for product in topProducts %}
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2 product">
                <img src="//placehold.it/400x400" class="img-thumbnail img-responsive center-block">
                <p>
                    <span class="price">{{ product.price|number_format(2, ',', ' ') }}</span>
                    {{ product.name }}
                </p>
            </div>
        {% endfor %}
    </div>
{% endblock body %}